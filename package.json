{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "build": "npx tsc && tsc-alias",
    "clean": "rm -rf ./dist",
    "clean:all": "rm -rf ./dist ./node_modules ./.nyc_output ./coverage",
    "commit": "cz",
    "prepare": "husky install",
    "lint": "eslint --ext .ts . --color",
    "pretify": "prettier \"**/*.+(js|json|yml|yaml|ts|md|graphql)\" --write",
    "test": "ts-mocha --paths --type-check -r dotenv/config -p tsconfig.json 'test/**/*.test.ts'",
    "test:coverage": "nyc ts-mocha --paths --type-check -p tsconfig.json 'test/**/*.test.ts'"
  },
  "keywords": [],
  "author": "Manish Sharma<manish.sharma0398@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.14",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "chai": "4.3.7",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  }
}
